@model IMSDomainLayer.Entiry.AppUser

@{
    ViewData["Title"] = "Create"; 
}

<h1>Create</h1>


<div class="col-sm-12">
<hr />
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div>
            @{
                if (TempData["msg"] != null)
                {
                    <h3><span class="text-danger">@TempData["msg"]</span></h3>
                }
            }
        </div>
        <div class="row">
            <div class="form-group col-sm-3">
                <label asp-for="FirstName" class="control-label">First Name *</label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            
            <div class="form-group col-sm-3">
                <label asp-for="LastName" class="control-label">Last Name</label>
                <input asp-for="LastName" class="form-control" />
            </div>

            <div class="form-group col-sm-3">
                <label asp-for="Email" class="control-label">Email *</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group col-sm-3">
                <label asp-for="Password" class="control-label">Password *</label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            
            <div class="form-group col-sm-3">
                <label asp-for="Phone" class="control-label">Phone *</label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>

            <div class="form-group col-sm-3">
                <label asp-for="Address" class="control-label">Address *</label>
                <input asp-for="Address" class="form-control" />
                
            </div>
            
        </div>

        <div class="from-group mt-3 pt-3">
            <button type="submit" class=" btn btn-dark">Save</button>
            <a href="/AppUser/Index" class="btn btn-primary">List</a>
        </div>
    </form>
</div>



